<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Index</title>
</head>
<body>
    <h1>Select a category</h1>
    <ul>
        <% categories.forEach(category => { %>
            <li>
                <a href="<%= category.category %>/items"> <%= category.category %></a>
                <form action="/<%= category.category %>/delete-category" method="POST">
                    <button type="submit">Delete</button>                
                </form>
            </li>
       <% }); %>
    </ul>
    <a href="/add-category">Add category</a>
</body>
</html>